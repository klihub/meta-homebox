# short-description: Create a DOS disk image with syslinux bootloader
# long-description: Creates a partitioned disk image that the user
# can directly dd to boot media. The selected bootloader is syslinux.

part /boot --source bootimg-pcbios --fstype=vfat --fixed-size ${REFKIT_VFAT_MB}M --label boot --active --align 1024

part / --source rootfs --rootfs-dir=${IMAGE_ROOTFS} ${REFKIT_IMAGE_SIZE} --fstype=ext4 --label rootfs --align 1024 --uuid ${REMOVABLE_MEDIA_ROOTFS_PARTUUID_VALUE}

bootloader --ptable msdos --timeout=5 --append="initrd=/initrd"
