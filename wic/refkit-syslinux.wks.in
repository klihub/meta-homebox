# short-description: Create a DOS disk image with syslinux bootloader
# long-description: Creates a partitioned disk image that the user
# can directly dd to boot media. The selected bootloader is syslinux.

part /boot --source syslinux-alix --fstype=vfat --fixed-size ${REFKIT_VFAT_MB}M --label boot --active --align 1024

part / --source rootfs --fstype=ext4 ${REFKIT_IMAGE_SIZE} --rootfs-dir=${IMAGE_ROOTFS} --label rootfs1 --align 1024

part / --source rootfs --fstype=ext4 ${REFKIT_IMAGE_SIZE} --rootfs-dir=${IMAGE_ROOTFS} --label rootfs2 --align 1024

bootloader --ptable msdos --timeout=50 --append="initrd=/initrd root=LABEL=rootfs1"
